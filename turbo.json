{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-only": {
      "dependsOn": ["^build-only"],
      "outputs": ["dist/**"]
    },
    "test": {
      "outputs": []
    },
    "test:ci": {
      "outputs": []
    },
    "test:lint": {
      "outputs": []
    },
    "test:unit": {
      "outputs": [],
      "inputs": [
        "**/tests/*.ts",
        "**/tests/*.js",
        "**/*.spec.ts",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.test.js"
      ]
    },
    "test:coverage": {
      "outputs": [],
      "inputs": [
        "**/tests/*.ts",
        "**/tests/*.js",
        "**/*.spec.ts",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.test.js"
      ]
    },
    "test:lint:ci": {
      "outputs": []
    },
    "test:unit:ci": {
      "outputs": [],
      "inputs": [
        "**/tests/*.ts",
        "**/tests/*.js",
        "**/*.spec.ts",
        "**/*.spec.js",
        "**/*.test.ts",
        "**/*.test.js"
      ]
    },
    "type-check": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    }
  }
}
