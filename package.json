    },
    {
      "name": "Jukka Raimovaara",
      "url": "https://github.com/xvaara"
    }
  ],
  "scripts": {
    "prepare": "husky && bun run build",
    "dev": "bun run --filter='*' dev",
    "build": "bun run --filter='*' build",
    "build-only": "bun run --filter='*' build-only",
    "lint": "bun run --filter='*' lint",
    "type-check": "bun run --filter='*' type-check",
    "test:lint": "bun run --filter='*' test:lint",
    "test:unit": "bun run --filter='*' test:unit",
    "test:coverage": "bun run --filter='*' test:coverage",
    "test": "bun run --filter='*' test"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "npm": ">=11.0.0",
    "node": ">=24.0.0"
  }
