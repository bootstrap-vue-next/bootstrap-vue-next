{
  "name": "bootstrap-vue-next-monorepo",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "contributors": [
    {
      "name": "aceofwings",
      "url": "https://github.com/aceofwings"
    },
    {
      "name": "Carlos Bonadeo",
      "url": "https://github.com/cdmoro"
    },
    {
      "name": "David W. Gray",
      "url": "https://github.com/dwgray"
    },
    {
      "name": "Issayah",
      "url": "https://github.com/VividLemon"
    },
    {
      "name": "Marius A",
