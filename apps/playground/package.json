{
  "name": "playground",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx vite --port 5173",
    "type-check": "bunx vue-tsc --noEmit -p tsconfig.app.json",
    "build-only": "bunx vite build",
    "build": "bun run type-check && bun run build-only",
    "preview": "bunx vite preview"
  },
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "bootstrap-vue-next": "workspace:^",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^22.19.7",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue/tsconfig": "^0.7.0",
    "bootstrap": "^5.3.8",
    "typescript": "^5.9.3",
    "unplugin-vue-components": "^28.8.0",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.2"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  }
}
