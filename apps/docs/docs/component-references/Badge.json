{
  "$schema": "./schema.json",
  "name": "@bootstrap-vue-3/badge",
  "version": "Alpha",
  "meta": {
    "title": "Badge",
    "description": "Badges, for counting and labeling components",
    "components": [
      {
        "component": "BBadge",
        "props": [
          {
            "prop": "dotIndicator",
            "description": "Indication position and dot styling applied",
            "type": "Booleanish"
          },
          {
            "prop": "textIndicator",
            "description": "Indication position applied",
            "type": "Booleanish"
          },
          {
            "prop": "pill",
            "description": "When set to 'true', renders the badge in pill style",
            "type": "Booleanish"
          },
          {
            "prop": "variant",
            "description": "Applies one of the Bootstrap theme color variants to the component",
            "type": "BgColorVariant"
          },
          {
            "prop": "tag",
            "description": "Specify the HTML tag to render instead of the default tag",
            "type": "string"
          }
        ],
        "emits": [],
        "slots": [
          {
            "name": "default",
            "description": "",
            "scope": []
          }
        ]
      }
    ]
  }
}